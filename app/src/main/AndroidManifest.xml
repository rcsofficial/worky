<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ateneo.cie199.worky">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".workyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/workylauncher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/workylauncher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FreelanceSignupActivity" />
        <activity android:name=".ClientSignupActivity" />
        <activity android:name=".ClientDashboardActivity" />
        <activity android:name=".FreelanceDashboardActivity" />
        <activity android:name=".ClientEditProfileActivity" />
        <activity android:name=".FreelanceEditProfileActivity" />
        <activity android:name=".ClientFindActivity" />
        <activity android:name=".ClientPostActivity" />
        <activity android:name=".FreelanceFindActivity" />
        <activity android:name=".FreelancePostActivity" />
        <activity android:name=".ClientEditDeletePostActivity" />
        <activity android:name=".FreelanceEditDeletePostActivity" />
        <activity android:name=".ClientEditPostFieldsActivity" />
        <activity android:name=".FreelanceEditPostFieldsActivity" />
        <activity android:name=".FreelanceViewAsClientActivity" />
        <activity android:name=".ClientViewAsFreelancerActivity"></activity>
    </application>

</manifest>