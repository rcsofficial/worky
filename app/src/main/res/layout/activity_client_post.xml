<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secondarybg"
    tools:context="edu.ateneo.cie199.worky.ClientPostActivity">

    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_c_postpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Post Job Hiring"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_c_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Posting Tips"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txv_c_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Insert Random Tips Here"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout4"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <TextView
                    android:id="@+id/lbl_c_jobcategory"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:text="Job Category:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spn_c_jobcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/jobcategory_array" />

            </LinearLayout>


            <TextView
                android:id="@+id/lbl_c_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.74"
                android:layout_marginTop="10dp"
                android:text="Position Title:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_c_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.62"
                android:ems="10"
                android:hint="Keyword"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_c_maxpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Maximum Pay:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_c_maxpay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.85"
                android:ems="10"
                android:hint="Maximum Pay"
                android:inputType="numberDecimal"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/lbl_c_jobloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Location:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_c_jobloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.91"
                android:ems="10"
                android:hint="Job Location"
                android:inputType="textPersonName"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl_c_jobdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Job Description:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_c_jobdesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:ems="10"
                android:hint="Job Description"
                android:inputType="textMultiLine"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btn_c_postjob"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:srcCompat="@drawable/postbtn" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
