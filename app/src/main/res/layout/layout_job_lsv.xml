<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imv_jobicon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/job1" />

    <TextView
        android:id="@+id/txv_jobtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imv_jobicon"
        android:text="Job Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_postedby"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_jobtitle"
        android:layout_toEndOf="@+id/imv_jobicon"
        android:text="Posted By:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_location"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_postedby"
        android:layout_toEndOf="@+id/imv_jobicon"
        android:text="Location:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_salary"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lbl_location"
        android:layout_below="@+id/lbl_location"
        android:text="Salary:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbl_field"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lbl_salary"
        android:layout_below="@+id/lbl_salary"
        android:layout_marginBottom="10dp"
        android:text="Field:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_postedby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lbl_postedby"
        android:layout_toEndOf="@+id/lbl_postedby"
        android:text="Posted By" />

    <TextView
        android:id="@+id/txv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_postedby"
        android:layout_toEndOf="@+id/lbl_location"
        android:text="Location" />

    <TextView
        android:id="@+id/txv_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_location"
        android:layout_toEndOf="@+id/lbl_salary"
        android:text="Salary" />

    <TextView
        android:id="@+id/txv_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbl_salary"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/lbl_field"
        android:text="Field" />
</RelativeLayout>